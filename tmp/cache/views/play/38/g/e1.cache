      <a href="#" onclick="new Ajax.Updater('preview_mono_629', '/monologues/preview?monologue_id=629', {asynchronous:true, evalScripts:true, parameters:'authenticity_token=' + encodeURIComponent('Izy1M+Y3ltMcIDevbn+4egVK0eTPkgGPg/dOQq/z8bg=')}); return false;">hide</a>
      <br/>
