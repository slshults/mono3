<h1>Listing Users</h1>

<table width="515">
  <tr>
    <th>Name (email)</th>
    <th> </th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name -%> (<%=h user.email -%>)</td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

