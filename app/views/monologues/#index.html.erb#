<%=  observe_field :search,
                  :frequency => 1.25,
                  :update => 'ajaxResults',
                  :before => "Element.show('spinner')",
                  :complete => "Element.hide('spinner')",
                  :url => {:action => 'search', :only_path => false},
                  :with => "'monologues=' + encodeURIComponent(value)" %>
  <div id='ajaxResults'>
    <%= render :partial => "shared/search" %>
  </div>


