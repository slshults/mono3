<% form_for @monologue do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :play_id %><br />
    <%= f.select(:play_id, @plays.map {|p| [p.title, p.id]}) %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :first_line %><br />
    <%= f.text_field :first_line %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 80 %>
  </p>
  <p>
    <%= f.label :gender_id %><br />
    <%= f.select :gender_id, [['Men',3],['Women',2],['Both',1]] %>
  </p>
  <p>
    <%= f.label :character %><br />
    <%= f.text_field :character %>
  </p>
  <p>
    <%= f.label :style %><br />
    <%= f.select :style, ['Verse', 'Prose', 'Verse & Prose'] %>
  </p>
  <p>
    <%= f.label :body_link %><br />
    <%= f.text_field :body_link %>
  </p>
  <p>
    <%= f.label :pdf_link %><br />
    <%= f.text_field :pdf_link %>
  </p>
  <p>
    <%= f.label :intercut %><br />
    <%= f.check_box :intercut %> 
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
